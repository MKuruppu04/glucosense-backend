# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/glucosense
MONGODB_TEST_URI=mongodb://localhost:27017/glucosense_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=30d

# Admin Account (First Setup)
ADMIN_EMAIL=admin@glucosense.com
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Twilio (Emergency Alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_EMERGENCY_VOICE_URL=https://yourserver.com/voice/emergency

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@glucosense.com
EMAIL_FROM_NAME=GlucoSense Platform

# Client URLs
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Alert Settings
CRITICAL_HIGH_DEFAULT=250
CRITICAL_LOW_DEFAULT=54
SEVERE_HIGH_DEFAULT=300
SEVERE_LOW_DEFAULT=40
ALERT_RETRY_ATTEMPTS=3
ALERT_RETRY_DELAY=180000

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_EXPIRE=3600000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_ALERTS=true
ENABLE_VOICE_CALLS=true
ENABLE_ANALYTICS=true
